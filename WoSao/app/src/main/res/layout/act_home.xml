<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivityTest">
    <!-- android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"-->

    <RelativeLayout
        android:id="@+id/rl_home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_home_title"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/tv_icon_search"
            android:layout_width="@dimen/icon_container_xy"
            android:layout_height="@dimen/icon_container_xy"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_ll_padding"
            android:scaleType="fitXY"
            android:src="@drawable/icon_search" />

        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_container_xy"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/view_home_title"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/im_icon_settings"
            android:layout_width="@dimen/icon_container_xy"
            android:layout_height="@dimen/icon_container_xy"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_ll_padding"
            android:scaleType="fitXY"
            android:src="@drawable/icon_setting" />


        <ImageView
            android:id="@+id/im_icon_share"
            android:layout_width="@dimen/icon_container_xy"
            android:layout_height="@dimen/icon_container_xy"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/im_icon_settings"
            android:scaleType="fitXY"
            android:src="@drawable/icon_share" />

    </RelativeLayout>
    
    <!--
    <com.facebook.login.widget.LoginButton
        xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:id="@+id/login_facebook_button"
        android:layout_width="34dp"
        android:layout_height="34dp"
        facebook:com_facebook_login_text=""
        facebook:com_facebook_logout_text=""
        android:layout_centerInParent="true"
        /> -->

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp" />


    <LinearLayout
        android:id="@+id/rl_home_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_home_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tab_books"
            style="@style/act_tab_style"
            android:drawableTop="@drawable/icon_tab_books"
            android:text="@string/view_tab_books"
            />

        <TextView
            android:id="@+id/tv_tab_staff"
            style="@style/act_tab_style"
            android:drawableTop="@drawable/icon_tab_staff"
            android:text="@string/view_tab_staff"
             />

        <TextView
            android:id="@+id/im_tab_search"
            style="@style/act_tab_style"
            android:drawableTop="@drawable/icon_tab_search"
            android:text="@string/view_tab_search"
            />


        <TextView
            android:id="@+id/im_tab_lending"
            style="@style/act_tab_style"
            android:drawableTop="@drawable/icon_tab_lend"
            android:text="@string/view_tab_lending"
            />

        <TextView
            android:id="@+id/im_tab_return"
            style="@style/act_tab_style"
            android:drawableTop="@drawable/icon_tab_return"
            android:text="@string/view_tab_return"
            />

    </LinearLayout>


</RelativeLayout>
